{
  "branding": {
    "logoSrc": "/fino.jpg",
    "logoAlt": "Fino Bank",
    "brandName": "Fino Payments",
    "shortName": "FB"
  },
  "header": {
    "component": "BaseHeader",
    "showLogo": true,
    "showBrandName": true,
    "rightComponents": ["ThemeToggle", "UserMenu"]
  },
  "login": {
    "title": "Log in to your account",
    "subtitle": null,
    "animation": {
      "enabled": true
    },
    "fields": {
      "email": {
        "type": "email",
        "placeholder": "Email",
        "required": true,
        "icon": "Mail",
        "validation": {
          "enabled": false,
          "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
          "errorMessage": "Invalid email"
        }
      },
      "password": {
        "type": "password",
        "placeholder": "Password",
        "required": true,
        "icon": "Lock",
        "showToggle": true,
        "validation": {
          "enabled": false,
          "pattern": ".{8,}",
          "errorMessage": "Min 8 characters"
        }
      }
    },
    "features": {
      "forgotPassword": true,
      "rememberMe": false
    },
    "submitButton": {
      "label": "Log in",
      "loadingLabel": "Logging in..."
    }
  },
  "userMenu": {
    "items": [
      {
        "id": "profile",
        "type": "item",
        "label": "Profile",
        "icon": "UserIcon",
        "action": "navigate",
        "route": "{{HOST_URL}}/profile",
        "enabled": false
      },
      {
        "id": "settings",
        "type": "item",
        "label": "Settings",
        "icon": "SettingsIcon",
        "action": "navigate",
        "route": "{{HOST_URL}}/settings",
        "enabled": true
      },
      {
        "id": "logout",
        "type": "item",
        "label": "Logout",
        "icon": "LogOutIcon",
        "action": "logout",
        "enabled": true,
        "className": "text-destructive hover:text-destructive!",
        "iconClassName": "text-destructive"
      }
    ]
  }
}
